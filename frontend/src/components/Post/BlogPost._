import { BasePage } from './PageBase';

export const BlogPage:React.FC = ({
  title,
  body
}) => {
  return (
    <BasePage
      className='blog-page'
    >
      {isLoading && 'Loading...'}
      {!isLoading &&
      page.node && (
        <article>
          <h1>{page.node.title}</h1>
          <BodyRenderer>{page.node.body}</BodyRenderer>
        </article>
      )}
      <footer>
        <Link to='/'>Go to home</Link>
      </footer>
    </BasePage>
  )
}