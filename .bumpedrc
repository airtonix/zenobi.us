files: [
  'package.json'
]

plugins:

  prerelease:
    'Linting config files':
      plugin: 'bumped-finepack'

  postrelease:

    'Check for missing changes':
      plugin: 'bumped-terminal'
      command: 'git-dirty'

    'Compiling browser version':
      plugin: 'bumped-terminal'
      command: 'cross-env NODE_ENV=production npm run build'

    'Publishing tag at GitHub':
      plugin: 'bumped-terminal'
      command: 'git tag $newVersion && git push origin $newVersion'

    'Publishing at GitHub Pages':
      plugin: 'bumped-gh-pages'
      folder: 'dist'