{
  "name": "zenobius",
  "version": "4.0.0-beta",
  "docker": {
    "image": "airtonix/zenobi.us",
    "tag": "4.0.0-beta"
  },
  "x0": {},
  "ci": {
    "dist": "./dist",
    "command": "npm run container:prod"
  },
  "scripts": {
    "dev": "npm run docker:run -- tool npm run container:dev:x0",
    "prod": "npm run docker:run -- tool npm run container:prod",
    "prod:static": "npm run docker:run -- tool npm run container:prod:static",
    "int": "npm run docker:run -- tool npm run container:int",
    "release": "npx standard-version",
    "// [container] commands": "",
    "container:dev": "npm-run-all --parallel container:dev:*",
    "container:dev:x0": "npx x0 src/content --debug --webpack=./config/webpack/development --host=0.0.0.0 --port=3000",
    "container:prod": "npm-run-all --parallel container:prod:*",
    "container:prod:x0": "x0 build src/content --webpack=./config/webpack/production",
    "container:prod:changelog": "conventional-changelog --infile=./project/CHANGELOG.md",
    "// [workstation] Release Commands": "npm:release [npm:prerelease > npm:git:pull] standard-version [ > postversion > [ docker run npm:containerprod]] > [npm:postrelease > [npm: ",
    "git:pull": "git pull",
    "git:publish": "npx npm-run-all --serial release:post:git-add release:post:git-commit-amend release:post:git-push-origin",
    "prerelease": "npx npm-run-all --serial git:pull",
    "postrelease": "npm run git:publish",
    "postversion": "npm run docker:run -- tool npm run container:prod",
    "release:post:git-add": "git add .",
    "release:post:git-commit-amend": "git commit --amend --no-edit",
    "release:post:git-push-origin": "git push --follow-tags",
    "// [workstation] Docker Commands": "",
    "docker:run": "docker-compose run --service-ports --rm",
    "docker:shell": "npm run docker:run -- tool /bin/sh",
    "docker:build": "docker-compose -f docker-compose--build.yml build tool"
  },
  "dependencies": {
    "@babel/register": "7.0.0",
    "@compositor/x0": "airtonix/x0#831a61f",
    "autoprefixer": "9.1.5",
    "axios": "0.17.0",
    "classnames": "2.2.6",
    "cross-env": "^5.2.0",
    "cross-var": "^1.1.0",
    "css-loader": "1.0.0",
    "design-system-utils": "1.1.1",
    "docz": "0.12.5",
    "http-proxy": "1.1.0",
    "mini-css-extract-plugin": "0.4.4",
    "node-sass": "4.9.3",
    "npm-run-all": "4.1.3",
    "parcel": "1.10.1",
    "postcss-functions": "3.0.0",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.1.1",
    "push-dir": "0.4.1",
    "react": "16.5",
    "react-router-dom": "4.4.0-beta.1",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "vuepress": "0.14.4",
    "webpack-config": "7.5.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
