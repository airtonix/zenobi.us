{
  "name": "zenobi.us",
  "description": "A Vue.js project",
  "version": "2.0.0-beta",
  "homepage": "http://github.com/airtonix/zenobi.us/",
  "author": "Zenobius Jiricek <airtonix@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "Vue",
    "vuex"
  ],
  "scripts": {
    "unit": "karma start test/unit/karma.conf.js",
    "test": "cross-env WEBPACK_ENV=test npm run unit",
    "prebuild": "rimraf ./dist && mkdirp dist",
    "build": "cross-env WEBPACK_ENV=prod babel-node ./build",
    "dev:run": "cross-env DEBUG=app* WEBPACK_ENV=dev babel-node ./build/server",
    "dev": "watch \"npm run dev:run\" ./build --wait=1",
    "release": "foundry release",
    "release-resume": "foundry resume"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "foundry": {
    "releaseCommands": [
      {
        "type": "customCommand",
        "updateFiles": "git clone git@github.com:airtonix/zenobi.us.git --branch gh-pages ./dist"
      },
      "foundry-release-git",
      "foundry-release-npm",
      {
        "type": "customCommand",
        "updateFiles": "npm run build"
      },
      {
        "type": "customCommand",
        "updateFiles": "cd dist && git add --all && git commit -m \"Release $FOUNDRY_VERSION\" && git push"
      }
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "cuid": "^1.3.8",
    "debug": "^2.2.0",
    "vue": "^2.0.0-rc.8",
    "vue-resource": "^1.0.3",
    "vue-router": "^2.0.0-rc.7",
    "vuex": "^2.0.0-rc.6"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-lodash": "^2.2.1",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-register": "^6.11.5",
    "babel-runtime": "^6.11.6",
    "cross-env": "^1.0.7",
    "cross-spawn": "^2.1.5",
    "css-loader": "^0.23.0",
    "eslint": "^2.0.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-friendly-formatter": "^1.2.2",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-html": "^1.3.0",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-standard": "^1.3.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "foundry": "^4.3.2",
    "foundry-release-require-branch": "0.0.2",
    "function-bind": "^1.0.2",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.22.0",
    "inject-loader": "^2.0.1",
    "isparta-loader": "^2.0.0",
    "jasmine-core": "^2.4.1",
    "json-loader": "^0.5.4",
    "json-server": "^0.8.21",
    "jsonfile": "^2.3.1",
    "karma": "^0.13.22",
    "karma-coverage": "^0.5.5",
    "karma-jasmine": "^0.3.8",
    "karma-mocha": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-requirejs": "^0.2.6",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.24",
    "karma-webpack": "^1.7.0",
    "kebab-case": "^1.0.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "serve-index": "^1.8.0",
    "stats-webpack-plugin": "^0.4.2",
    "vue-hot-reload-api": "^2.0.6",
    "vue-html-loader": "^1.2.3",
    "vue-loader": "^8.5.4",
    "vue-style-loader": "^1.0.0",
    "watch": "^0.19.2",
    "webpack": "^1.12.2",
    "webpack-config": "^6.1.3",
    "webpack-dev-middleware": "^1.8.3",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-merge": "^0.8.3"
  }
}
