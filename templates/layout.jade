doctype html
block vars
	- var bodyclass = null;
html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width')
			title
				block title
					= locals.name
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			link(rel='stylesheet', media="print", href='/css/print.css')
			link(rel='stylesheet', media="screen, projector", href='/css/screen.css')

	body(class=bodyclass)

		header.header
			div.content-wrap
				block header
					nav.top-bar.hide-for-print(data-topbar)

						ul.title-area
							li.name
								h1
									a= locals.name
							li.toggle-topbar.menu-icon
								a(href="#") Menu

						section.top-bar-section
							ul.right
								each _, item in contents.pages
									li
										a(href="#")= item

		div#content
			div.content-wrap
				block content
					h2 Welcome to zombocom!

		footer
			div.content-wrap
				block footer
					section.copy
						p &copy; #{ new Date().getFullYear() } #{ locals.owner }