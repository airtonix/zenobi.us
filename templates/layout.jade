doctype html
block vars
	- var bodyclass = null;
include mixins
html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width')
			title
				block title
					= locals.name
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			link(rel='stylesheet', media="print", href='/css/print.css')
			link(rel='stylesheet', media="screen, projector", href='/css/screen.css')
		script(type='text/javascript', src='/vendor/modernizr/modernizr.js')

	body(id=page.metadata.title)

		header.header
			block header
				nav.top-bar.hide-for-print(data-topbar)
					ul.title-area
						li.name
							h1
								a= locals.name
						li.toggle-topbar.menu-icon
							a(href="#") Menu

					section.top-bar-section
						ul.right
							+dropdown-menu()
		div#content
			block content

		footer#site-footer

			div.row
				block footer
					section.copy
						p &copy; #{ new Date().getFullYear() } #{ locals.owner }

		script(src='/vendor/jquery/jquery.js')
		script(src='/vendor/fastclick/lib/fastclick.js')

		script.
			;(function(){
				"use strict";
				$(function(){
						$(".toggle-topbar").on('mouseup touchend', function(){
							$(this).parents('nav').toggleClass("expanded")
						})

					});
			})();
