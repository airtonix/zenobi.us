doctype html
include mixins
include helpers

block vars
	- bodyclass = 'page'

html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width')
			meta(name='mode', content=mode)
			title
				block title
					!=site.name
			link(rel='alternate', href=site.url+'/feed.xml', type='application/rss+xml', title=site.name)
			link(rel='stylesheet', media="print", href='/assets/css/print.css')
			link(rel='stylesheet', media="screen, projector", href='/assets/css/screen.css')
			include partial/analytics

	body(id=getMeta(page,'title').slugify(), class=bodyclass)

		header.header
			block header
				include partial/header

		article#content
			block content

		footer#site-footer
			block footer
				include partial/footer

		block js
			script(data-main='/assets/js/boot', src='/vendor/requirejs/require.js')
