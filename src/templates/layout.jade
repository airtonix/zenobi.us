doctype html

block vars
	- bodyclass = 'page'

html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width')
			title= locals.name
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			link(rel='stylesheet', media="print", href='/assets/css/print.css')
			link(rel='stylesheet', media="screen, projector", href='/assets/css/screen.css')

	body(id=page.metadata.title, class=bodyclass)

		header.header
			block header
				nav.top-bar.hide-for-print(data-topbar)
					ul.title-area
						li.name
							h1
								a(href="#{locals.url}")=site.name
						li.toggle-topbar.menu-icon
							a(href="#") Menu

					section.top-bar-section
						ul.right
							unless page.metadata
								li: a(href='/') Home
							li: a(href='/about/') About
							li: a(href='/articles/') Articles
							li: a(href='/projects/') Projects
							li: a(href='/contact/') Contact

		article#content
			block content

		footer#site-footer
			.row
				block footer
					section.copy
						p &copy; #{ new Date().getFullYear() } #{ site.owner }
			.row
				pre= pageJson

		.contact-form.hide
			h4.text-centered Send me a message
				small.block I'll get back to you
			form(method='post', action='').contact
				input(name='email', type='email', placeholder='your email')
				textarea(name='message', placeholder='a message to me...').vertical
				button(type='submit').button send

		script(data-main='/assets/js/boot.js', src='/assets/vendor/requirejs/require.js')
