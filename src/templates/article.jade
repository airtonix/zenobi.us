extends page

block append vars
	- bodyclass = 'article-detail'

block prepend title
	| #{ page.title + " - "}

block content-title
	include partial/author
	h1= page.title
	p.author
		| #{ "Written by " }
		mixin author(page.metadata.author)

block content-html
	article.article
		section.content!= typogr(page.html).typogrify()

block prepend footer
	include partial/post-footer